<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Edit Product" class="sapUiResponsivePadding">
        <content>
            <VBox class="sapUiSmallMargin">
                <Label text="Name" />
                <Input value="{/name}" />
                <Label text="Price" />
                <Input value="{/price}" />
                <Label text="Category" />
                <Input value="{/category}" />
                <Label text="Supplier" />
                <Input value="{/supplierName}" />
                <Label text="Rating" />
                <Input value="{/rating}" type="Number" />
                <Label text="Image URL" />
                <Input value="{/productPicUrl}" />
            </VBox>
        </content>
        <beginButton>
            <Button text="Save" press="onConfirmEdit" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelDialog" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
