<mvc:View
	controllerName="saprecap.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:custom="saprecap.control"
	core:require="{
		formatter: 'saprecap/model/formatter'
	}">

	<custom:CustomPage
		title="Custom Page"
		id="page">
		<custom:content>
			<VBox  class="sapUiLargeMargin">
			<custom:CustomText text="Custom Text" style="color:#5B42F3; font-size:20px; font-weight: bold" visible="true"/>
			<custom:CustomButton text="Custom Button"  class="mycustom" press="onButtonPress"/>
			</VBox>
		</custom:content>
	</custom:CustomPage>

</mvc:View>
