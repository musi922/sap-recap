<mvc:View
    controllerName="saprecap.controller.Admin"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Page title="Admin Dashboard">
        <headerContent>
            <Button icon="sap-icon://log" press="onLogoutPress" />
        </headerContent>
        <content>
            <Table id="productsManagementTable"
                items="{products>/Products}"
                mode="SingleSelect">
                <columns>
                    <Column><Text text="Product ID" /></Column>
                    <Column><Text text="Name" /></Column>
                    <Column><Text text="Price" /></Column>
                    <Column><Text text="Actions" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{products>ProductId}" />
                            <Input value="{products>name}" />
                            <Input value="{products>price}" />
                            <Button text="Update" press="onUpdateProduct" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>